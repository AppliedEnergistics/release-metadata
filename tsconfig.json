{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,

    "strict": true,
    "noEmit": false,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "outDir": "./"
  },
  "include": [
    "*.ts"
  ],
  "exclude": []
}
